{
    "name": "smulti",
    "version": "0.0.0",
    "workspaces": [
        "packages/*",
        "functions/*",
        "apps/*",
        "infra/*"
    ],
    "scripts": {
        "build": "npm exec -ws -- npm run build --if-present",
        "dev": "npm exec -ws -- npm run dev --if-present",
        "deploy": "npm install && npm run build && cd infra && npm run cdk-deploy"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22",
        "@types/aws-lambda": "8.10.156",
        "typescript": "^5"
    },
    "dependencies": {
        "typescript": "^5.8.3"
    }
}
